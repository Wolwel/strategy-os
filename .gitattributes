# Auto detect text files and perform LF normalization
* text=auto

# Force LF for specific files
*.py text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
